<div>
  <h2>
    Edit Profile

  </h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-4">
    <%= f.label :avatar, class: "block text-sm font-medium text-gray-700" %>
    <div class="mt-1">
      <% if resource.avatar.attached? %>
      <%= image_tag resource.avatar.variant(resize_to_limit: [100, 100]), class: "mb-2 rounded-full" %>
      <% end %>
      <%= f.file_field :avatar, class: "block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100" %>
    </div>
  </div>
  <div>
    <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
    <div class="mt-1">
      <%= f.text_field :name, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
      <p>
        Your full name (optional)

      </p>
    </div>
  </div>
  <div>
    <%= f.label :username, class: "block text-sm font-medium text-gray-700" %>
    <div class="mt-1">
      <%= f.text_field :username, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
    </div>
  </div>
  <div>
    <%= f.label :bio, class: "block text-sm font-medium text-gray-700" %>
    <div class="mt-1">
      <%= f.text_area :bio, rows: 3, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
      <p>
        Brief description about yourself

      </p>
    </div>
  </div>
  <div>
    <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
    <div class="mt-1">
      <%= f.email_field :email, autocomplete: "email", class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>
        Currently waiting confirmation for: <%= resource.unconfirmed_email %>

      </p>
      <% end %>
    </div>
  </div>
  <div>
    <h3>
      Privacy Settings

    </h3>
    <div class="mt-4">
      <%= f.label :profile_visible, class: "flex items-center" do %>
      <%= f.check_box :profile_visible, class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded mr-2" %>
      <span>
        Make my profile visible to others

      </span>
      <% end %>
    </div>
    <div>
      <%= f.label :anonymity_level, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.select :anonymity_level, User.anonymity_levels.keys.map { |k| [k.humanize, k] },
      {},
      { class: "mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md" } %>
      <p>
        Control who can see your profile information

      </p>
    </div>
  </div>
  <div>
    <h3>
      Change Password

    </h3>
    <p>
      Leave blank if you don't want to change it

    </p>
    <div class="mb-4">
      <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-1">
        <%= f.password_field :password, autocomplete: "new-password", class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
        <% if @minimum_password_length %>
        <p>
          <%= @minimum_password_length %> characters minimum

        </p>
        <% end %>
      </div>
    </div>
    <div>
      <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-1">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
      </div>
    </div>
  </div>
  <div>
    <%= f.label :current_password, class: "block text-sm font-medium text-gray-700" %>
    <div class="mt-1">
      <%= f.password_field :current_password, autocomplete: "current-password", class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
      <p>
        We need your current password to confirm your changes

      </p>
    </div>
  </div>
  <div>
    <%= f.submit "Update", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>
  <% end %>

  <div>
    <h3>
      Cancel my account

    </h3>
    <p>
      Unhappy? All your data will be permanently deleted.

    </p>
    <%= button_to "Delete my account", registration_path(resource_name),
    data: { confirm: "Are you sure? This cannot be undone." },
    method: :delete,
    class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
  </div>
  <div>
    <%= link_to "Back", :back, class: "text-sm font-medium text-indigo-600 hover:text-indigo-500" %>
  </div>
</div>
