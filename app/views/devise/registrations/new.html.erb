<div>
  <h2>
    Sign up
  </h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="mb-4">
      <%= render "devise/shared/error_messages", resource: resource %>
    </div>

    <!-- Username field with Stimulus data attributes -->
    <div>
      <%= f.label :username, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.text_field :username,
                       autofocus: true,
                       autocomplete: "username",
                       class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline",
                       placeholder: "letters, numbers, and underscores only (3-30 characters)",
                       data: { username_validation_target: "input" } %>
      <div data-username-validation-target="feedback" class="text-xs text-gray-500 mt-1">
        Username must be 3-30 characters, with only letters, numbers, and underscores
      </div>
    </div>

    <!-- Email field -->
    <div>
      <%= f.label :email, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.email_field :email,
                        autocomplete: "email",
                        class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline",
                        placeholder: "you@example.com" %>
      <div class="text-xs text-gray-500 mt-1">
        We'll never share your email with anyone else.
      </div>
    </div>

    <!-- Password field -->
    <div>
      <%= f.label :password, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.password_field :password,
                          autocomplete: "new-password",
                          class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline",
                          placeholder: "Minimum 8 characters" %>
    </div>

    <!-- Password confirmation field -->
    <div>
      <%= f.label :password_confirmation, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.password_field :password_confirmation,
                          autocomplete: "new-password",
                          class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline",
                          placeholder: "Confirm your password" %>
    </div>

    <!-- Terms acceptance checkbox -->
    <div>
      <div class="flex items-center">
        <input id="terms_accepted" name="user[terms_accepted]" type="checkbox" class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded">
        <label for="terms_accepted" class="ml-2 block text-sm text-gray-900">
          I agree to the Terms of Service and Privacy Policy
        </label>
      </div>
    </div>

    <!-- Submit button -->
    <div>
      <%= f.submit "Sign up", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
  <% end %>

  <!-- Sign in link -->
  <div>
    <p>
      Already have an account?
      <%= link_to "Sign in", new_session_path(resource_name), class: "font-medium text-indigo-600 hover:text-indigo-500" %>
    </p>
  </div>
</div>
