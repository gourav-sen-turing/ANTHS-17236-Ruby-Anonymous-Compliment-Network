

<html>
  <head>
    <title>
      Anonymous Compliment Network

    </title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <!-- Include Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  </head>
  <body>
    <%= render 'shared/navigation' %>

    <% if notice.present? %>
    <div>
      <p>
        <%= notice %>

      </p>
    </div>
    <% end %>

    <% if alert.present? %>
    <div>
      <p>
        <%= alert %>

      </p>
    </div>
    <% end %>
    <main>
      <%= yield %>
    </main>
    <footer>
      <div>
        <div class="flex flex-col md:flex-row justify-between items-center">
          <div class="text-center md:text-left mb-4 md:mb-0">
            <p>
              Â© <%= Date.today.year %> Anonymous Compliment Network

            </p>
            <p>
              Spreading positivity one compliment at a time

            </p>
          </div>
          <div>
            <%= link_to "About", "#", class: "text-gray-300 hover:text-white" %>
            <%= link_to "Privacy", "#", class: "text-gray-300 hover:text-white" %>
            <%= link_to "Terms", "#", class: "text-gray-300 hover:text-white" %>
            <%= link_to "Contact", "#", class: "text-gray-300 hover:text-white" %>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
