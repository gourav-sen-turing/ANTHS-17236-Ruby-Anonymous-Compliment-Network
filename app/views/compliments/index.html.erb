<div class="compliment-card bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300 overflow-hidden border border-gray-100">
  <%# Color strip at the top based on category %>
  <% category_color = compliment.category&.name&.parameterize || "gray" %>
  <div class="category-strip h-1 w-full <%= category_strip_color(category_color) %>"></div>

  <div class="flex flex-col h-full">
    <div class="px-5 py-4 flex-grow">
      <%# Category tag %>
      <div class="flex justify-between items-center mb-3">
        <% if compliment.category %>
        <span class="inline-block px-2 py-1 text-xs font-semibold rounded-full <%= category_badge_classes(category_color) %>">
          <%= compliment.category.name %>
        </span>
        <% end %>

        <span class="text-sm text-gray-500">
          <%= time_ago_in_words(compliment.created_at) %> ago
        </span>
      </div>

      <%# Compliment content - main focus %>
      <div class="mb-4">
        <p class="text-gray-800 leading-relaxed">
          <%= simple_format(compliment.content) %>
        </p>
      </div>
    </div>

    <%# Footer section with metadata %>
    <div class="px-5 py-3 bg-gray-50 border-t border-gray-100">
      <div class="flex justify-between items-center">
        <%# Left side - sender/recipient info %>
        <div>
          <% if received %>
          <div class="text-sm">
            <span class="text-gray-500">From: </span>
            <% if compliment.anonymous? %>
            <span class="font-medium text-indigo-700">Anonymous</span>
            <% else %>
            <span class="font-medium text-indigo-700"><%= compliment.sender&.name || "Unknown" %></span>
            <% end %>
          </div>
          <% else %>
          <div class="text-sm">
            <span class="text-gray-500">To: </span>
            <span class="font-medium text-indigo-700"><%= compliment.recipient.name %></span>
            <% if compliment.anonymous? %>
            <span class="text-xs text-gray-500 ml-1">(sent anonymously)</span>
            <% end %>
          </div>
          <% end %>

          <% if compliment.community %>
          <div class="text-xs text-gray-500 mt-1">
            Shared in <%= link_to compliment.community.name, community_path(compliment.community), class: "text-indigo-600 hover:text-indigo-800" %>
          </div>
          <% end %>
        </div>

        <%# Right side - kudos count and actions %>
        <div class="flex items-center space-x-2">
          <%# Kudos counter %>
          <div class="text-sm flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-yellow-500 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
            </svg>
            <span class="font-semibold text-gray-700"><%= compliment.kudos_count || 0 %></span>
          </div>

          <%# Action buttons - conditional based on whether it's received/sent %>
          <div class="flex space-x-1">
            <%= link_to compliment_path(compliment), class: "text-gray-500 hover:text-indigo-600 transition-colors duration-200" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
            </svg>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
