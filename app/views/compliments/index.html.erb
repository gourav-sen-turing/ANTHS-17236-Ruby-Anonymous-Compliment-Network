<div>
  <div class="mb-8 flex justify-between items-center">
    <h1>
      Compliments

    </h1>
    <div class="flex space-x-4">
      <%= link_to new_compliment_path, class: "px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 transition-colors" do %>
      <i class="fas fa-plus mr-1"></i>

      New Compliment
      <% end %>

      <div class="relative" data-controller="dropdown">
        <button>
          dropdown#toggle" class="px-4 py-2 bg-white border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50 transition-colors">

          <i class="fas fa-filter mr-1"></i>

          Filter

          <i class="fas fa-chevron-down ml-1 text-xs"></i>

        </button>
        <div data-dropdown-target="menu" class="hidden absolute right-0 mt-2 w-56 bg-white border border-gray-200 rounded-md shadow-lg z-10">
          <%= form_with url: compliments_path, method: :get, class: "p-4" do |f| %>
          <div class="mb-3">
            <%= f.label :category_id, "Category", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.collection_select :category_id, Category.all, :id, :name, { include_blank: "All Categories" },
            { class: "w-full p-2 text-sm border border-gray-300 rounded-md" } %>
          </div>
          <% if current_user&.admin? %>
          <div>
            <%= f.label :status, "Status", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.select :status,
            options_for_select([["All", ""], ["Pending", "pending"], ["Approved", "approved"], ["Flagged", "flagged"]]),
            {}, { class: "w-full p-2 text-sm border border-gray-300 rounded-md" } %>
          </div>
          <% end %>
          <div>
            <%= f.submit "Apply Filters", class: "px-3 py-1.5 bg-indigo-600 text-white text-sm rounded-md hover:bg-indigo-700" %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <% if @compliments.any? %>

  <div>
    <% @compliments.each do |compliment| %>
    <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
      <div class="p-5 border-b border-gray-100">
        <div class="flex justify-between items-start mb-3">
          <div class="flex items-center">
            <span>
              ">
              <%= compliment.category.name %>

            </span>
            <% if compliment.anonymous? %>
            <span>
              Anonymous
            </span>
            <% end %>
          </div>
          <span>
            <%= time_ago_in_words(compliment.created_at) %> ago
          </span>
        </div>
        <p>
          <%= compliment.content %>
        </p>
        <div>
          <div class="text-sm text-gray-600">
            To:
            <span>
              <%= compliment.recipient.name %>

            </span>
          </div>
          <div>
            <div class="text-gray-500 text-sm flex items-center">
              <i class="far fa-heart mr-1"></i>

              <%= compliment.kudos_count %>
            </div>
            <%= link_to compliment_path(compliment), class: "text-indigo-600 hover:text-indigo-800 text-sm" do %>
            Details
            <i class="fas fa-chevron-right ml-1 text-xs"></i>

            <% end %>
          </div>
        </div>
      </div>

      <% if current_user&.admin? || current_user == compliment.recipient %>
      <div>
        <% if current_user == compliment.recipient && !compliment.read_at? %>
        <%= button_to mark_as_read_compliment_path(compliment), method: :patch, class: "text-xs text-gray-600 hover:text-gray-800" do %>
        <i class="far fa-check-circle mr-1"></i>

        Mark as read
        <% end %>
        <% end %>

        <% if current_user&.admin? %>
        <%= button_to compliment_path(compliment), method: :delete,
        data: { confirm: "Are you sure you want to delete this compliment?" },
        class: "text-xs text-red-600 hover:text-red-800" do %>
        <i class="far fa-trash-alt mr-1"></i>

        Remove
        <% end %>
        <% end %>

      </div>
      <% end %>
    </div>
    <% end %>
  </div>
  <div>
    <%= paginate @compliments %>
  </div>
  <% else %>

  <div>
    <div class="text-gray-500 mb-4">
      <i class="far fa-comment-dots text-5xl"></i>

    </div>
    <h3>
      No compliments found

    </h3>
    <p>
      There are currently no compliments to display.

    </p>
    <%= link_to "Send a Compliment", new_compliment_path, class: "px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 transition-colors" %>
  </div>
  <% end %>

</div>
